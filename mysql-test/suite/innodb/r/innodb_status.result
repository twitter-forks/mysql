1
ROLLBACK;
# Wait for status values to be updated.
DROP TABLE t1;
SET GLOBAL innodb_change_buffering_debug = @old_innodb_change_buffering_debug;
#
# Cleanup
#
SET GLOBAL innodb_file_per_table = @old_innodb_file_per_table;
DROP VIEW gsv;
